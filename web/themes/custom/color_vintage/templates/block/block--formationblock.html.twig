<section id="financer-home" class="relative">
    <div class="container-fluid maxwidth">
        <div class="row flex align">
            <div class="offset-md-0 col-md-6 offset-lg-2 col-lg-3 margin-top-60 order-2" data-aos="fade-right" data-aos-delay="">
                <h2 class="lora size30 uppercase bold-font margin-bottom-30 block lineheight30">{{content.field_titre}}</h2>
                <div class="margin-bottom-30 ">{{content.body|raw}}</div>
                <span><a href="{{content.field_lien[0]['#url']|default('#')}}" class="btn">{{content.field_lien[0]['#title']}}</a></span>
            </div>
            <div class="offset-md-0 col-md-6 offset-lg-2 col-lg-5 order-1">
                <img src="{{ file_url(content.field_image.0['#item'].entity.uri.value) }}" data-aos="fade-left" data-aos-delay="200">
            </div>
        </div>
    </div>
</section>