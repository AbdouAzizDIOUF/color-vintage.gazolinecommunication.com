<dialog id="window3">
    {#<button id="exit" class="close"></button>#}
    <h2 style="text-align: center">Confirmation d'inscription !</h2>
    <p style="text-align: center">Un mail de validation vous a été envoyé à votre adresse mail
        <br>Merci de bien vouloir confirmer votre inscription.
        <br>Pensez à vérifier vos spams.</p><br><br>
    <button id="exit3" class="fermer3">Fermer</button>
</dialog>

<section class="">
    <div class="container-fluid maxwidth" >
        <div class="row d-flex align-items-center">
            <div class="col-md-6 col-lg-6" >
                <img src="{{ file_url(node.field_image.entity.uri.value)}}" data-aos="fade-right" data-aos-delay="200">
            </div>
            <div class="col-md-6 padding-left-80">
                <h1 class="lora size40 bold-font uppercase lineheight30 block margin-top-30 margin-bottom-20 text-left">{{ label }}</h1>
                <div>{{ node.body.value|raw }}</div>
                <form action="/contacter-nous" id="contacterNousFORM" method="post">
                    <div class="row">
                        <div class="col-md-6 form-group margin-top-20">
                            <input type="text" placeholder="Nom" class="form-control" id="name" name="name">
                        </div>
                        <div class="col-md-6 form-group margin-top-20">
                            <input type="text" placeholder="Prénom" class="form-control" id="lastname" name="lastname">
                        </div>
                        <div class="col-md-6 form-group margin-top-20">
                            <input type="email" placeholder="Adresse mail" class="form-control" id="email" name="email">
                        </div>
                        <div class="col-md-6 form-group margin-top-20">
                            <input type="tel" placeholder="Téléphone" class="form-control" id="phone" name="phone">
                        </div>
                    </div>
                    <div class="form-group margin-top-20">
                        <input type="text" placeholder="Objet" class="form-control" id="Objet" name="Objet">
                    </div>
                    <div class="form-group margin-top-20">
                        <textarea placeholder="Message" class="form-control" id="Message" style="height: 200px" name="Message"></textarea>
                    </div>
                    <div class="form-check margin-top-20">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefaultContact" name="flexCheckDefaultContact">
                        <label class="form-check-label" for="flexCheckDefault" style="display: block;text-transform: inherit">
                            J’ai lu et j’accepte les Conditions générales
                        </label>
                    </div>
                    <div class="form-group margin-top-20 margin-bottom-20">
                        <button href="##" class="connexion">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>