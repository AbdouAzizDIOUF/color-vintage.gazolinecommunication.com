<!-- nos locaux -->
<section id="nos-locaux" class="relative">
    <div class="container-fluid maxwidth">
        <div class="row flex align">
            <div class="col-md-12 relative">
                <img src="{{ file_url(node.field_image.entity.uri.value) }}" data-aos="fade-left" data-aos-delay="200" class="objet-fit" style="max-height:620px;">
            </div>
        </div>
    </div>
    <div class="text-margin-neg-280 bg-light-grey padding-top-280 padding-bottom-280  ">
        <div class="container-fluid maxwidth">
            <div class="row flex align">
                <div class="col-md-12 margin-top-60 padding-right-120" data-aos="fade-right" data-aos-delay="">
                    <h2 class="lora size30 uppercase bold-font margin-bottom-30 block lineheight30">{{ node.field_nos_locaux_titre.value }}</h2>
                    <div class="margin-bottom-30">{{ node.field_nos_locaux_body.value|raw }}</div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid maxwidth text-margin-neg-280 margin-bottom-60">
        <div class="row flex align">
            {% for key, item in node.field_nos_locaux_galery if key is not null %}
                <div class="col-md-4">
                    {% if item.entity.field_image is not empty %}
                        <img src="{{ file_url(item.entity.field_image.entity.uri.value)}}" data-aos="fade-left" data-aos-delay="200" class="objet-fit">
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</section>
