<dialog id="window3">
    {#<button id="exit" class="close"></button>#}
    <h2 style="text-align: center">Confirmation d'inscription !</h2>
    <p style="text-align: center">Un mail de validation vous a été envoyé à votre adresse mail
        <br>Merci de bien vouloir confirmer votre inscription.
        <br>Pensez à vérifier vos spams.</p><br><br>
    <button id="exit3" class="fermer3">Fermer</button>
</dialog>
<!-- Apropos -->
<section class="bg-apropos-2 bg-black"  data-aos="fade" data-aos-delay="">
    <div class="container maxwidth ">
        <div class="container-fluid maxwidth padding-top-60 padding-bottom-20">
            <span class="size20 light-font uppercase lineheight20 block margin-bottom-20 text-center">Nous rejoindre</span>
            <h1 id="offre-title" class="lora size50 uppercase white bold-font margin-bottom-30 block text-center" data-aos="fade-down" data-aos-delay="200">{{ label }}</h1>
        </div>
    </div>
</section>
<!-- / Apropos-->

<div class="menu-right">
    <a href="#formulaire"><img src="/themes/custom/color_vintage/img/svg/deposer.svg" alt="###" style="max-width: 50px;margin-right: 40px;left: 3px;position: relative;">Déposer ma candidature</a>
    <a href="##"><img src="/themes/custom/color_vintage/img/svg/question.svg" alt="###" style="max-width: 50px;left: 2px;position: relative;">Lorem ipsum color</a>
</div>

<!-- nousrejoindre -->
<section id="nousrejoindre" class="relative margin-top-60 padding-bottom-120	">
    <div class="container-fluid maxwidth">
        <div class="row flex align">
            <div class="col-2 col-md-1 flex flex-column social flex-start margin-top-30">
                <a target="_blank" href="https://twitter.com/intent/tweet?url=https://color-vintage.gazolinecommunication.com&text={{ node.body.value|raw }}"><img src="/themes/custom/color_vintage/img/svg/twitter.svg" data-aos="fade-left" data-aos-delay="200"></a>
                {#<a href="##"><img src="/themes/custom/color_vintage/img/svg/youtube.svg" data-aos="fade-left" data-aos-delay="200"></a>#}
                <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{url('<current>')}}"><img src="/themes/custom/color_vintage/img/svg/facebook.svg" data-aos="fade-left" data-aos-delay="200"></a>
            </div>
            <div class="col-10 col-md-11 relative">
                <img src="{{ file_url(node.field_image_header.entity.uri.value)}}" data-aos="fade-left" data-aos-delay="200" class="objet-fit">
            </div>
        </div>
        <div class="row margin-top-60">
            <div class="offset-md-1 col-md-5">
                <span class="lora size30 uppercase bold-font margin-top-30 margin-bottom-30 block lineheight30 padding-bottom-20 border-color-bottom">Présentation de l’offre</span>
                {{ node.body.value|raw }}
            </div>
            <div class="col-md-4 offset-md-1">
                <span class="lora size30 uppercase bold-font margin-top-30 margin-bottom-30 block lineheight30 padding-bottom-20 border-color-bottom">Conditions d’admissions</span>
                {{ node.field_condition.value|raw }}
            </div>
        </div>
    </div>
</section>
<!-- / nousrejoindre-->


<!-- Kits -->
<section id="kits-home" class="relative" >
    <div class="container-fluid maxwidth  margin-top-100">
        <div class="row flex align">
            <div class="offset-md-1 col-md-5 col-lg-5" >
                <img src="{{ file_url(node.field_chart_image.entity.uri.value)}}" data-aos="fade-right" data-aos-delay="200">
            </div>
            <div class="offset-md-0 col-md-6 offset-lg-1 col-lg-3 margin-top-60" data-aos="fade-left" data-aos-delay="">
                <h2 class="lora size30 uppercase bold-font margin-bottom-30 block lineheight30">{{node.field_chart_title.value}}</h2>
                <div class="margin-bottom-30">{{ node.field_chart_description.value|raw }}</div>
            </div>
        </div>
    </div>
</section>
<!-- / Kits -->


<!-- Témoignage -->
<section id="formation-home" class="margin-top-120 margin-bottom-120">
    <div class="container-fluid maxwidth">
        <h2 class="lora size30 uppercase bold-font margin-bottom-100 block lineheight30 text-center">Ils ont été formés</h2>

        <div class="row flex align">

            {% for item in temoignes %}
                <div class="offset-md-1 col-md-4  border-color-bottom">
                    <div class="row">
                        <div class="offset-md-0  col-md-6"><img  src="{{ item.image }}" data-aos="fade-right" data-aos-delay="200" class="margin-auto block"></div>
                        <div class="offset-md-0 col-md-6"  data-aos="fade-down" data-aos-delay="300">
                            <span class="size20 light-font uppercase lineheight20 block margin-top-100  margin-bottom-20">{{ item.nom }} {{ item.prenom }}</span>
                            <div class="margin-bottom-30">{{ item.body|raw }}</div>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
        <span class="margin-top-120 block">
        <a href="/temoignages" class="btn margin-auto block">Découvrir les témoignages</a>
    </span>
    </div>
</section>
<!-- / Témoignage -->

<!-- Question collapse  -->
<section id="question" class="relative margin-top-30 padding-top-120	padding-bottom-120 ">
    <div class="container-fluid maxwidth">
        <div class="row flex align">
            <div class="offset-md-1 col-md-3 margin-bottom-20">
                <h2 class="lora size30 uppercase bold-font padding-bottom-30 block lineheight30  border-color-bottom">FAQ</h2>
                <div class="accordion" id="collapse">

                    {% for key, item in node.field_faq_offre %}
                        <div>
                            <h3 class="weight600 size20  black uppercase padding-top-30 padding-bottom-30" data-bs-toggle="collapse" data-bs-target="#collapse{{ key }}" aria-expanded="false">
                                {{ item.entity.field_question.value }} ?
                            </h3>
                            <div id="collapse{{ key }}" class="collapse padding-bottom-30" aria-labelledby="collapse1" data-parent="#collapse">
                                {{ item.entity.field_reponse.value|raw }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="offset-md-1 col-md-6 margin-bottom-20">
                <img src="{{ file_url(node.field_image_faq.entity.uri.value)}}" data-aos="fade-left" data-aos-delay="200" class="objet-fit margin-bottom-20 shadow-black-right">
            </div>
        </div>
    </div>
</section>
<!-- / question collapse -->


<!-- formulaire  -->
<section id="formulaire" class="relative padding-top-100 padding-bottom-100 bg-grey-clair">
    <div class="container-fluid maxwidth">
        <div class="col-md-12 margin-bottom-60">
            <h2 class="lora size30 uppercase bold-font margin-bottom-30 block lineheight30">Déposer ma candidature</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        </div>
        {{ drupal_entity('webform', 'candidature_offre') }}
    </div>
</section>
<!-- / formulaire  -->