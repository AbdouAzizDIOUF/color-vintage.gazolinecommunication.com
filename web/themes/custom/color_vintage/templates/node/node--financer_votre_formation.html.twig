{% for key, item in node.field_financer_votre_formation if key is not null%}
    {% if key is not divisible by (2) %}
        <section id="pourquoi1" class="relative" >
            <div class="container-fluid maxwidth  margin-top-100">
                <div class="row flex align">
                    <div class="offset-md-1 col-md-5 col-lg-5" >
                        <img src="{{ file_url(item.entity.field_image.entity.uri.value)}}" data-aos="fade-right" data-aos-delay="200">
                    </div>
                    <div class="offset-md-0 col-md-6 offset-lg-1 col-lg-3 margin-top-60" data-aos="fade-left" data-aos-delay="">
                        <div class="flex flex-start margin-left-100-neg">
                            <img src="{{ file_url(item.entity.field_icon.entity.fileuri) }}" alt="###" data-aos="fade-right" data-aos-delay="200" height="80" class="margin-right-30">
                            <h2 class="lora size30 uppercase bold-font margin-bottom-30 block lineheight30">{{item.entity.field_titre.value}}</h2>
                        </div>
                        <div class="margin-bottom-30">{{ item.entity.field_description.value|raw }}</div>
                       {# <a href="{{item.link}}" class="btn">Découvrir la fiche profil</a>#}
                    </div>
                </div>
            </div>
        </section>
    {% else%}
        <section id="pourquoi2" class="relative bg-grey-clair" >
            <div class="container-fluid maxwidth  margin-top-100">
                <div class="row flex align">

                    <div class="offset-md-0 col-md-6 offset-lg-1 col-lg-3 margin-top-60" data-aos="fade-left" data-aos-delay="">
                        <div class="flex flex-start margin-left-100-neg">
                            <img src="{{ file_url(item.entity.field_icon.entity.fileuri) }}" alt="###" data-aos="fade-right" data-aos-delay="200" height="80" class="margin-right-30">
                            <h2 class="lora size30 uppercase bold-font margin-bottom-30 block lineheight30">{{item.entity.field_titre.value}}</h2>
                        </div>
                        <div class="margin-bottom-30">{{ item.entity.field_description.value|raw }}</div>
                        {#<a href="{{item.link}}" class="btn">Découvrir la fiche profil</a>#}
                    </div>
                    <div class="offset-md-1 col-md-5 col-lg-5" >
                        <img src="{{ file_url(item.entity.field_image.entity.uri.value)}}" data-aos="fade-right" data-aos-delay="200">
                    </div>
                </div>
            </div>
        </section>
        <!-- / pourquoi2 -->
    {% endif %}
{% endfor %}
